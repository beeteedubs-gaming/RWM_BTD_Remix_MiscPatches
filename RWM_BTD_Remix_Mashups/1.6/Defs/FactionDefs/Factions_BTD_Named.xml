<?xml version="1.0" encoding="utf-8"?>

<Defs>

<!-- The Named One - Friendly Supporters -->
	<FactionDef Name="BTD_OutlanderBase" Abstract="True">
		<pawnSingular>patron</pawnSingular>
		<pawnsPlural>patrons</pawnsPlural>
		<categoryTag>Outlander</categoryTag>
		<listOrderPriority>30</listOrderPriority>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<leaderTitle>prime patron</leaderTitle>
		<techLevel>Industrial</techLevel>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
	<!-- change this -->
		<allowedCultures>
			<li>Rustican</li>
		</allowedCultures>
	<!-- Update Xenos for Patrons as needed-->
		<xenotypeSet>
			<xenotypeChances>
				<BT_Voidling>0.70</BT_Voidling>
			</xenotypeChances>
		</xenotypeSet>
		<backstoryCategories>
			<li>Civil</li>
			<li>Outlander</li>
		</backstoryCategories>
		<raidLootValueFromPointsCurve>
			<points>
				<li>(35, 8)</li>
				<li>(100, 60)</li>
				<li>(1000, 250)</li>
				<li>(2000, 400)</li>
				<li>(4000, 500)</li>
				</points>
		</raidLootValueFromPointsCurve>
		<caravanTraderKinds>
			<li>Caravan_Outlander_BulkGoods</li>
			<li>Caravan_Outlander_CombatSupplier</li>
			<li>Caravan_Outlander_Exotic</li>
			<li>Caravan_Outlander_PirateMerchant</li>
		</caravanTraderKinds>
		<visitorTraderKinds>
			<li>Visitor_Outlander_Standard</li>
		</visitorTraderKinds>
		<baseTraderKinds>
			<li>Base_Outlander_Standard</li>
		</baseTraderKinds>
		<allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
		<raidLootMaker>OutlanderRaidLootMaker</raidLootMaker>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(700, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers Inherit="False">
		<!-- Peaceful visitors/settlers -->
			<li>
				<kindDef>Peaceful</kindDef>
				<options>
					<BTD_Villager_NamedOnes>20</BTD_Villager_NamedOnes>
				</options>
			</li>
		<!-- Settlement defenders -->
			<li>
				<kindDef>Settlement</kindDef>
				<options>
					<BTD_Villager_NamedOnes>20</BTD_Villager_NamedOnes>
					<BTD_Town_Guard>20</BTD_Town_Guard>
					<BTD_Town_Councilman>5</BTD_Town_Councilman>
				</options>
			</li>
			<!-- Traders (vanilla trader kind + your pawn as guard). Add custom trader PawnKinds later if you like -->
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<BTD_Town_Trader>1</BTD_Town_Trader>
				</traders>
				<carriers>
					<Yak>6</Yak>
					<Bison>5</Bison>
					<Horse>2</Horse>
				</carriers>
				<guards>
					<BTD_Town_Guard>10</BTD_Town_Guard>
				</guards>
			</li>
			<!-- Raids (placeholder using your current PawnKind). Add combat-focused PawnKinds later -->
			<li>
				<kindDef>Combat</kindDef>
				<options>
					<BTD_Town_Guard>5</BTD_Town_Guard>
				</options>
			</li>
		</pawnGroupMakers>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
	</FactionDef>


	<FactionDef ParentName="BTD_OutlanderBase">
		<defName>BTD_Outlander</defName>
		<label>The Named Ones</label>
		<fixedName>The Named Ones</fixedName>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
		<description>A friendly faction honoring my followers, subscribers, members, and patrons.</description>
		<factionIconPath>UI/Icons/Ideoligion_Pirate/Ideoligion_PirateB</factionIconPath>
		<colorSpectrum>
			<li>(0.10, 0.65, 0.65)</li>
			<li>(0.00, 0.45, 0.55)</li>
		</colorSpectrum>
		<maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
		<configurationListOrderPriority>10</configurationListOrderPriority>
	</FactionDef>

</Defs>
